{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "dist",
    "declarationDir": "dist/types",
    "module": "commonjs",
    "target": "es2020",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
